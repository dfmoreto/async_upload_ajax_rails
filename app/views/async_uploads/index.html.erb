<div class="row">
  <h2 class="col-xl-2 col-lg-2 col-md-4 col-sm-12 col-xs-12">Files</h2>
  <div class="col-xl-3 col-lg-3 col-md-4 col-sm-12 col-xs-12">
    <%= link_to "Add", new_async_upload_path, class: "btn btn-primary", style: "margin-top: 1em;" %>
</div>


<div class="row">
  <div class="col-xl-12 col-lg12 col-md-12 col-sm-12 col-xs-12">
    <% if @files.present? %>
      <ul>
        <% @files.each do |file| %>
          <li><%= link_to file[:name], file[:link] %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
